<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="TRACE" name="Tidy Duck">
    <Appenders>
        <RollingFile name="RollingFile" fileName="/var/log/tidy-duck/tidy-duck.log" filePattern="/var/log/tidy-duck/$${date:yyyy-MM}/tidy-duck-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="90"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="RollingFile" level="INFO"/>
        </Root>
    </Loggers>
</Configuration>